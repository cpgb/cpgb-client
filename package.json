{
  "name": "@tw/cpgb-ui",
  "version": "1.0.0",
  "description": "cpgb-ui",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm-run-all -p lint main:watch renderer:watch electron:start",
    "main:watch": "parcel watch src/main.ts --out-dir dist --out-file main --target electron",
    "renderer:watch": "parcel src/index.html --out-dir dist/renderer",
    "electron:start": "nodemon --watch src/main.ts --exec electron .",
    "lint": "tslint --fix -c tslint.json 'src/**/*{.ts,.tsx}'"
  },
  "author": "tw",
  "license": "ISC",
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix -c tslint.json",
      "git add"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@types/css": "^0.0.31",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "app-root-path": "^3.0.0",
    "electron": "^7.1.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.3"
  }
}
