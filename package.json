{
  "name": "@tw/cpgb-ui",
  "version": "1.0.0",
  "description": "cpgb-ui",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm-run-all -p lint main:watch renderer:watch electron:start",
    "main:watch": "parcel watch src/main.ts --out-dir dist --out-file main --target electron",
    "renderer:watch": "parcel src/index.html --out-dir dist/renderer",
    "electron:start": "nodemon --watch src/main.ts --exec electron .",
    "lint": "npm-run-all -p eslint stylelint",
    "eslint": "eslint --fix src/**/*{.ts,.tsx}",
    "stylelint": "stylelint --fix src/**/*.css"
  },
  "author": "tw",
  "license": "ISC",
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/electron": "^1.6.10",
    "electron-is-dev": "^1.1.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@rfgamaral/parcel-plugin-typings-for-css-modules": "^1.0.4",
    "@types/css": "^0.0.31",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "app-root-path": "^3.0.0",
    "electron": "^7.1.3",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "typescript": "^3.7.3"
  }
}
